<h2>Sign up</h2>

<form class="form signup-form">
  <div class="form-group">
    <label for="username-login">Username:</label>
    <input class="form-input" type="text" id="username-input-signup" />
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input class="form-input" type="password" id="password-input-signup" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Sign Up!</button>
  </div>
  <div>
      <a class="list-name flex-row justify-space-between" href="/login">Login Instead</a>
  </div>
</form>

<script src="/js/signup.js"></script>